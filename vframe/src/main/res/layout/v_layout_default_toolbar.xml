<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/commonTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:statusBarMode="light"
        titlebar:fillStatusBar="true"
        titlebar:statusBarColor="@color/colorAppTheme"
        titlebar:titleBarColor="@color/colorAppTheme"
        titlebar:leftType="imageButton"
        titlebar:leftImageResource="@drawable/ic_back_left_white_24dp"
        titlebar:centerType="textView"
        titlebar:centerTextColor="@android:color/white"
        titlebar:centerTextSize="18sp"
        titlebar:rightType="imageButton"
        titlebar:showBottomLine="false"/>

</FrameLayout>